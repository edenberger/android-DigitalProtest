<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redandyellow"
    tools:context="com.bergereden.digitalprotest.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fist"
        android:textColor="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="0dp"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/address"
        app:layout_constraintHorizontal_bias="0.47" />

    <EditText
        android:id="@+id/testDest"
        android:layout_width="260dp"
        android:layout_height="43dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="#80ffffff"
        android:ems="10"
        android:hint="@string/hintWebsite"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/webview"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/manualEmail"
        android:layout_width="285dp"
        android:layout_height="43dp"
        android:layout_marginStart="50dp"
        android:background="#80ffffff"
        android:ems="10"
        android:hint="@string/hintEmail"
        android:visibility="invisible"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/manualDest" />

    <EditText
        android:id="@+id/manualHashtag"
        android:layout_width="285dp"
        android:layout_height="43dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:background="#80ffffff"
        android:ems="10"
        android:hint="Hashtag"
        android:inputType="textEmailAddress"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/manualEmail" />

    <EditText
        android:id="@+id/manualDest"
        android:layout_width="285dp"
        android:layout_height="43dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="41dp"
        android:background="#80ffffff"
        android:ems="10"
        android:hint="@string/hintWebsite"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/webview"
        android:layout_marginLeft="50dp" />

    <EditText
        android:id="@+id/testEmail"
        android:layout_width="260dp"
        android:layout_height="43dp"
        android:layout_marginStart="0dp"
        android:background="#80ffffff"
        android:ems="10"
        android:hint="@string/hintEmail"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="-14dp"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/testDest" />

    <EditText
        android:id="@+id/hashtag"
        android:layout_width="260dp"
        android:layout_height="43dp"
        android:layout_marginLeft="-4dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="#80ffffff"
        android:ems="10"
        android:hint="Hashtag"
        android:inputType="textEmailAddress"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testEmail" />

    <TextView
        android:id="@+id/address"
        android:layout_width="298dp"
        android:layout_height="34dp"
        android:background="#80ffffff"
        android:selectAllOnFocus="true"
        android:text="@string/address"
        android:textAlignment="center"
        android:textIsSelectable="true"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/hashtag"
        app:layout_constraintHorizontal_bias="0.523" />

    <Switch
        android:id="@+id/switchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="5dp"
        android:background="#80ffffff"
        android:text="@string/http"
        android:visibility="invisible"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/manualEmail"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/testDest"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.25" />

    <WebView
        android:id="@+id/webview"
        android:layout_width="395dp"
        android:layout_height="131dp"
        android:layout_marginTop="56dp"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>